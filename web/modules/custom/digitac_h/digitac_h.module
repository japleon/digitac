function digitac_h_entity_insert(Drupal\Core\Entity\EntityInterface $entity) {
  
  if ($entity->getEntityTypeId() !== 'node') {
    return;
  }

  if ((!$entity->isPublished()) && ($entity->bundle() == 'idea' || $entity->bundle() == 'experiencia'))
  {

    $mailManager = \Drupal::service('plugin.manager.mail');
    $module = 'digitac_h';
    $key = 'create_idea';
    $to = \Drupal::currentUser()->getEmail();
    $params['message'] = $entity->bundle();
    $params['node_title'] =  $entity->label();
    $langcode = \Drupal::currentUser()->getPreferredLangcode();
    $send = true;

    $result = $mailManager->mail($module, $key, $to, $langcode, $params, NULL, $send);

    if ($result['result'] !== true) {
          $messages = \Drupal::messenger()->addMessage(t('There was a problem sending your message and it was not sent.'),'error');
    }
  }


}

function digitac_h_mail($key, &$message, $params) {

 $options = array(
   'langcode' => $message['langcode'],
 );

 switch ($key) {
   case 'create_idea':
     $message['from'] = \Drupal::config('system.site')->get('mail');
     $message['subject'] = t('DigitacHub: @bundle creada, pendiente de aprobación.', array('@bundle' => $params['message']), $options);
     $message['body'][] = t('La @bundle creada (@title) pendiente de aprobación por parte de los moderadores del Reto.', array('@bundle' => $params['message'],'@title' => $params['node_title']), $options);
     break;
 }

}

