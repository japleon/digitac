<div class="block-slider-news__item">
    <div class="block-slider-news__item-container">
        <div class="block-slider-news__item-image">
            {{ fields.field_reto_imagen.content }}

            <div class="region">
                {{ fields.field_reto_estado.content }}
            </div>
        </div>

        <div class="block-slider-news__item-content">
            <div class="category">
                <span class="type">{{ fields.field_reto_categoria.content }}</span>
            </div>
            <div class="title">{{ fields.title.content }}</div>
            <div class="content">{{ fields.body.content }}</div>
        </div>
    </div>
</div>
